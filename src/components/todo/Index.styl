.section
    width 100%
    display: flex
    justify-content center
    align-items flex-start
    background-color $sectiongrey
    height: 100%
    @media (max-width: 768px)
        padding 15px
    .input_container
        position: relative;
        display: inline-block;
        input
            padding-left: 20px
            font-size: 17px;
            font-style: normal;
            font-weight: 600;
            line-height: normal;
            background-color $sectiongrey
        input::placeholder
            color: $searchgrey
        .icon_search
            position: absolute;
            top: 50%;
            right : 15px;
            transform: translateY(-50%);
            color: #888
    .add_button
        position: absolute;
        right 28px
        bottom: 28px

    .inner_container
        margin-top: 200px;
        min-width 50%
        display: flex
        justify-content flex-start
        align-items center
        flex-direction: column
        height: 80dvh
        @media (max-width: 768px)
            margin-top: 80px;
            height: 80dvh
            justify-content flex-start
        .text_container
            margin-bottom 30px
            h3
                color $darkblue
                font-size: clamp(18px, 2vw, 26px);
                font-style: normal;
                font-weight: 700;
                line-height: normal;
                margin 0
            span
                color $taskgrey
                font-size: clamp(13px, 1.5vw, 17px)
                font-style: normal
                font-weight: 600
                line-height: normal
                b
                    color $blue
                    font-size: clamp(13px, 1.5vw, 17px)
                    font-style: normal
                    font-weight: 600
                    line-height: normal
                a
                    color $blue
                    font-size: clamp(13px, 1.5vw, 17px)
                    font-style: normal
                    font-weight: 600
                    line-height: normal
               
        input[type="text"]
            width 100%
            height 51px
            border-radius: 5px;
            border: 2px solid $lightgrey
        input:focus
            outline: none
        div
            width 100%
            .task_container
                max-width: 100%
                height: 64px
                background-color: $white
                box-shadow: 0px 1px 6px 0px rgba(40, 56, 72, 0.10);
                border-radius: 5px;
                display: flex
                justify-content space-between
                align-items: center
                padding 15px
                margin-bottom 10px    
                &:first-child
                    margin-top 30px
              .complete
                    background-color #E2EEF5
                .name
                    font-size: 15px;
                    font-style: normal;
                    font-weight: 600;
                    line-height: normal;
                    width 80%
                .completed
                    text-decoration: line-through;
                    transition: all 0.3s ease; 
                    text-decoration-thickness: 2px; 
                    text-decoration-color: $darkgrey
                    color: $darkgrey
              
                .priority
                    border-radius: 40px
                    color $white
                    font-size: 11px;
                    font-style: normal;
                    font-weight: 700;
                    line-height: normal;
                    padding 5px 10px
                    text-transform: capitalize;
                    display: inline-block  
                .urgente
                    background-color: $danger-light  
                .importante
                    background-color: $warning  
                input[type='checkbox']
                    width 33px
                    height 32px
                    border-radius 5px
                    background $white  
                    border 2px solid $default  
                    appearance none 
                    cursor pointer  
                    position relative  

                    &:checked
                        background $success  
                        border 2px solid $success  

                        &::after
                            content ''
                            position absolute
                            top 3px  
                            left 10px  
                            width 8px  
                            height 14px  
                            border 2px solid white
                            border-width 0 2px 2px 0
                            transform rotate(45deg)
                            background-color $success  
                .dropdown
                    width 10px
                    position relative
                    button
                        background none
                        outline none
                        border none
                        cursor pointer
                    .dropdown-menu
                        position absolute
                        width 110px
                        height: 74px
                        bottom: -30px;
                        right: -5px;
                        background-color $white
                        display: flex
                        flex-direction: column
                        z-index 3
                        justify-content: space-around
                        padding 11px
                        border-radius 5px
                        box-shadow: 0px 0px 8px 2px rgba(49, 81, 113, 0.10);
                        button
                            display: flex
                            justify-content: flex-start
                            align-items center
                            position relative
                            span
                                margin-right: 5px
                            .green
                                background-color: $green
                                height: 9px
                                display: block
                                width 9px
                                border-radius 50%
                            .grey
                                background-color: $grey
                                height: 9px
                                width 9px
                                border-radius 50%
                                display: block
                        svg
                            position absolute
                            top 10px
                            right: 10px 
        



    
            