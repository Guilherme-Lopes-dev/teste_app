.sidebar
  height 100dvh
  width 110px
  background-color $blue
  display flex
  flex-direction column
  align-items center
  justify-content flex-start
  padding-top 20px
  z-index 3
  left 0
  top 0
  @media (max-width: 768px)
    width 80px
  img
    height 50px
    width 50px

  .sidebar_container
    width 100%
    height 100%
    display flex
    flex-direction column
    padding-top 250px

    a
      display flex
      flex-direction column
      justify-content center
      align-items center
      color $white
      text-decoration none
      max-width 100%
      height 83px
      border 1px solid $ligth-blue
      position relative
      font-size clamp(8px, 3vw, 12px)
      .icon
        display flex
        justify-content center
        align-items center
        margin-bottom 5px  

      span
        font-size 14px  
        line-height 1.5
        text-align center

    a.active
      background-color $active-blue

    a:focus
      outline none

    a:hover
      background-color $hover-blue 

