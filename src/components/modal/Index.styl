.modal
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center

.modal-overlay
  position absolute
  top 0
  left 0
  width 100dvw
  height 100dvh
  background rgba(0, 0, 0, 0.5)

.modal-content
  position relative
  background $white
  padding 30px 40px
  border-radius 8px
  z-index 100000
  max-width: 660px
  width 100%
  @media (max-width: 768px)
    margin: 20px
  &.delete
    position: relative;
    background: #fff;
    padding: 7px 40px;
    border-radius: 8px;
    z-index: 1000;
    max-width: 447px;
    height: 345px;
    width: 100%;
    @media (max-width: 768px)
      margin: 20px
  .close-button
    background none
    border none
    font-size 1.5em
    cursor pointer
    position: absolute
    top -5px
    right 10px
    z-index 100000

.modal-header
  display flex
  justify-content space-between
  align-items flex-start
  h2
    margin 0
.modal-body
  margin-top 20px








  
  
