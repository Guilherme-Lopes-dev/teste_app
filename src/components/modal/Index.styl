

.modal
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center

.modal-overlay
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0, 0, 0, 0.5)

.modal-content
  position relative
  background $danger
  padding 20px
  border-radius 8px
  z-index 1000

.modal-header
  display flex
  justify-content space-between
  align-items center

.close-button
  background none
  border none
  font-size 1.5em
  cursor pointer

.modal-body
  margin-top 20px
