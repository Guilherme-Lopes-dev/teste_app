.drawer
  width 227px
  background-color $opal-white
  display flex
  justify-content center
  height 100dvh
  @media (max-width: 768px)
    width 100%
    height: 200px
    padding-top: 0
    padding-left 0
    align-items: center

  .inner_container
    display: flex
    justify-content flex-start
    align-items center
    flex-direction: column
    width 100%
    margin-top:200px
    @media (max-width: 768px)
      margin-top:0px

    h4
      margin-bottom 52px
      @media (max-width: 768px)
        margin-bottom 10px
    .list
      display: flex
      flex-direction: column
      @media (max-width: 768px)
       width: 100%
       justify-content center
      .item_list  
        margin-bottom 15px
        display flex
        justify-content flex-start
        align-items center
        font-size clamp(9px, 2vw, 13px)
        font-style normal
        font-weight 600
        @media (max-width: 768px)
          justify-content flex-start
          padding-left: 30%
        span
            border-radius 50px
            height 20px
            width 20px
            display flex
            justify-content center
            align-items center
            margin-left 5px
            color $white
            font-size 11px
            font-style normal
            font-weight 700
            line-height normal
            @media (max-width: 768px)
              height 12px
              width 12px
              font-size 9px

        span.danger
            background-color $danger
        span.warning
            background-color $warning
        span.success
            background-color $green
        span.info
            background-color $blue
        svg
          margin-right 12px
