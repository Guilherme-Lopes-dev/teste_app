.header
    height clamp(63px, 3.3vw, 83px)
    box-shadow: 0px 1px 6px 0px rgba(40, 56, 72, 0.07);
    padding clamp(10px, 2vw, 16px) clamp(20px, 5vw, 33px) clamp(10px, 3vw, 19px) 0
    display flex
    justify-content flex-end
    align-items center
    background-color $white
    .profile_container
        display: flex
        clamp(120px, 9.3vw, 240px)
        justify-content space-between
        img
            border-radius 50px
            margin-right 10px
            height auto
            width 47px
            cursor pointer
        .inner_container
            display flex
            align-items flex-start
            justify-content center
            flex-direction column
            .name
                color $dark-blue
                font-size clamp(11px, 2vw, 15px)
                font-style normal
                font-weight 600
                line-height normal
            .title
                color $blue
                font-size clamp(9px, 1.5vw, 12px)
                font-style: normal
                font-weight 600
                line-height normal