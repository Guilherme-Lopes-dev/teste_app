.form_todo
    width 100%
    display: flex
    flex-direction: column
    position relative
    margin-bottom 50px
    .save-button
        position absolute
        right: 0
        bottom -40px
        width: clamp(100px, 8vw + 12px, 118px)
        height: clamp(20px, 8vw + 12px, 47px)
        font-size:clamp(11px, 8vw + 12px, 13px) !important
        
    input[type='text']
        width 100%
        height: 50px
        border-radius: 5px;
        border: 2px solid $lightgrey
        padding 5px
        background $white
    input[type='text']:focus
        outline none
    .description
        margin 10px 0 10px 0
        display flex
        justify-content start
        width 100%
        font-size: 14px;
        font-style: normal;
        font-weight: 600;
        line-height: normal;
        color $formgrey
    textarea
        width 100%
        height: 183px
        border-radius: 5px;
        border: 2px solid $lightgrey
        background $white
        margin 0 0 10px 0
        padding 5px
    textarea:focus
        outline none
    .radio-group
        display: flex;
        align-items: center
        justify-content start
        width 100%
        .radio_label
          margin-right: 10px
        input[type="radio"]
          margin-bottom: 3px;
          height: 24px
          border $lightgrey

